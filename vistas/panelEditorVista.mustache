<div class="container py-4" style="max-width: 1200px;">
    <!-- Card Principal del Panel de Editor -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-header text-white text-center py-4 bg-primary">
            <h1 class="mb-0 fw-bold">
                <i class="bi bi-pencil-square me-2"></i>
                Panel de Editor
            </h1>
            <p class="lead mb-0 mt-2 opacity-75">Gestiona preguntas y reportes del juego</p>
        </div>

        <div class="card-body p-4">
            <!-- Botones de Accion Principal -->
            <div class="row mb-4 g-3">
                <!-- Card Ver Reportes -->
                <div class="col-12 col-md-6">
                    <a href="/editor/verReportes" class="text-decoration-none">
                        <div class="card shadow-sm h-100 hover-card border-0 text-white"
                             style="background-color: #a11010; transition: transform 0.2s, box-shadow 0.2s;">
                            <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center text-center">
                                <i class="bi bi-flag-fill mb-3" style="font-size: 3rem;"></i>
                                <h4 class="fw-bold mb-2">Ver Reportes</h4>
                                <p class="mb-3 opacity-75">Revisa las preguntas reportadas</p>
                                <span class="badge bg-light text-danger">Ir a Reportes <i class="bi bi-chevron-right ms-1"></i></span>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 col-md-6">
                    <a href="/editor/verSugerencias" class="text-decoration-none">
                        <div class="card shadow-sm h-100 hover-card border-0 text-white"
                             style="background-color: #fd7e14; transition: transform 0.2s, box-shadow 0.2s;">
                            <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center text-center">
                                <i class="bi bi-lightbulb-fill mb-3" style="font-size: 3rem;"></i>
                                <h4 class="fw-bold mb-2">Ver Sugerencias</h4>
                                <p class="mb-3 opacity-75">Revisa preguntas sugeridas por usuarios</p>
                                <span class="badge bg-light text-dark">Ir a Sugerencias <i class="bi bi-chevron-right ms-1"></i></span>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-12 col-md-6">
                    <a href="/editor/crearCategoriaForm" class="text-decoration-none">
                        <div class="card shadow-sm h-100 hover-card border-0 text-white"
                             style="background-color: #007bff; transition: transform 0.2s, box-shadow 0.2s;">
                            <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center text-center">
                                <i class="bi bi-tags-fill mb-3" style="font-size: 3rem;"></i>
                                <h4 class="fw-bold mb-2">Crear Nueva Categoría</h4>
                                <p class="mb-3 opacity-75">Agrega categorías para preguntas</p>
                                <span class="badge bg-light text-primary">Crear Categoría <i class="bi bi-chevron-right ms-1"></i></span>
                            </div>
                        </div>
                    </a>
                </div>



                <!-- Card Crear Nueva Pregunta -->
                <div class="col-12 col-md-6">
                    <a href="/editor/crearPreguntaForm" class="text-decoration-none">
                        <div class="card shadow-sm h-100 hover-card border-0 text-white"
                             style="background-color: #28c628; transition: transform 0.2s, box-shadow 0.2s;">
                            <div class="card-body p-4 d-flex flex-column justify-content-center align-items-center text-center">
                                <i class="bi bi-plus-circle-fill mb-3" style="font-size: 3rem;"></i>
                                <h4 class="fw-bold mb-2">Crear Nueva Pregunta</h4>
                                <p class="mb-3 opacity-75">Agrega preguntas al juego</p>
                                <span class="badge bg-light text-success">Crear Pregunta <i class="bi bi-chevron-right ms-1"></i></span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Sección de Listado de Preguntas -->
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-light">
                    <h3 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-list-ul me-2"></i>
                        Listado de Preguntas
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th class="text-center" style="width: 60px;">ID</th>
                                <th>Texto de la Pregunta</th>
                                <th class="text-center" style="width: 150px;">Categoría</th>
                                <th class="text-center" style="width: 250px;">Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#preguntas}}
                                <tr>
                                    <td class="text-center fw-bold align-middle">{{id}}</td>
                                    <td class="align-middle">{{texto}}</td>
                                    <td class="text-center align-middle">
                                        <span class="badge text-white shadow-sm" style="background-color: {{categoria_color}};">
                                            {{categoria}}
                                        </span>
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="d-flex justify-content-center gap-1 flex-wrap">

                                            <button onclick="toggleAnswers({{id}})"
                                                    class="btn btn-sm btn-primary"
                                                    title="Ver Respuestas">
                                                <i class="bi bi-eye-fill"></i> Ver
                                            </button>

                                            <!-- Boton Editar -->
                                            <a href="/editor/modificarPreguntaForm?id={{id}}"
                                            class="btn btn-sm btn-warning text-dark">
                                            <i class="bi bi-pencil-fill"></i> Editar
                                            </a>

                                            <!-- Boton Eliminar -->
                                            <a href="/editor/eliminarPregunta?id={{id}}"
                                            onclick="return confirm('¿Estás seguro de que quieres eliminar esta pregunta?');"
                                            class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash-fill"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr id="answers-{{id}}" style="display:none;">
                                    <td colspan="4" class="p-0">
                                        <div class="alert alert-info mb-0 rounded-0" style="border-left: 4px solid #0dcaf0;">
                                            <div class="p-3">
                                                <h6 class="fw-bold mb-3">
                                                    <i class="bi bi-check2-circle me-2"></i>Respuestas:
                                                </h6>
                                                <ul class="list-group list-group-flush">
                                                    {{#respuestas}}
                                                        <li class="list-group-item {{#es_correcta}}list-group-item-success{{/es_correcta}}{{^es_correcta}}list-group-item-danger{{/es_correcta}} d-flex align-items-center">
                                                            {{#es_correcta}}
                                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                            {{/es_correcta}}
                                                            {{^es_correcta}}
                                                                <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                                            {{/es_correcta}}
                                                            {{texto}}
                                                        </li>
                                                    {{/respuestas}}
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/preguntas}}
                            {{^preguntas}}
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                        <p class="mt-3 mb-0">No hay preguntas para mostrar.</p>
                                    </td>
                                </tr>
                            {{/preguntas}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,123,255,0.4);
    }

    .btn-outline-danger:hover {
        transform: translateY(-1px);
    }

    .table > tbody > tr {
        transition: background-color 0.2s ease;
    }

    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.85em;
    }

    @media (max-width: 768px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        .card-body {
            padding: 1.5rem !important;
        }

        .btn-sm {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .table th,
        .table td {
            font-size: 0.85rem;
            padding: 0.5rem;
        }
    }
</style>

<script>
    function toggleAnswers(questionId) {
        var answersRow = document.getElementById('answers-' + questionId);

        if (answersRow.style.display === 'none') {
            answersRow.style.display = 'table-row';
        } else {
            answersRow.style.display = 'none';
        }
    }
</script>