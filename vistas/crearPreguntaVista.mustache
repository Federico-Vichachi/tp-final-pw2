<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white p-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-plus-circle-fill me-2"></i>Crear Nueva Pregunta
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form action="/editor/procesarCrearPregunta" method="POST">

                        <div class="mb-4">
                            <label for="texto" class="form-label fw-bold text-dark">Texto de la Pregunta</label>
                            <textarea class="form-control form-control-lg" id="texto" name="texto" rows="2" required placeholder="Ej: ¿Cuál es la capital de Francia?"></textarea>
                        </div>

                        <div class="mb-4">
                            <label for="categoria_id" class="form-label fw-bold text-dark">Categoria</label>
                            <select class="form-select form-select-lg" id="categoria_id" name="categoria_id" required>
                                <option value="" selected disabled>Selecciona una categoria...</option>
                                {{#categorias}}
                                    <option value="{{id}}">{{nombre}}</option>
                                {{/categorias}}
                            </select>
                            <div class="form-text">
                                ¿No encontras la categoraa? <a href="/editor/crearCategoriaForm">Crea una nueva aca</a>.
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Respuesta Correcta -->
                        <div class="mb-3">
                            <label for="respuesta_correcta" class="form-label fw-bold text-success">
                                <i class="bi bi-check-circle-fill me-1"></i>Respuesta Correcta
                            </label>
                            <input type="text" class="form-control border-success" id="respuesta_correcta" name="respuesta_correcta" required placeholder="Ej: París">
                        </div>

                        <!-- Respuestas Incorrectas -->
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label text-danger fw-bold"><i class="bi bi-x-circle-fill me-1"></i>Incorrecta 1</label>
                                <input type="text" class="form-control border-danger" name="respuesta_incorrecta1"
                                       value="{{pregunta.respuesta_incorrecta1}}" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label text-danger fw-bold"><i class="bi bi-x-circle-fill me-1"></i>Incorrecta 2</label>
                                <input type="text" class="form-control border-danger" name="respuesta_incorrecta2"
                                       value="{{pregunta.respuesta_incorrecta2}}" required>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label text-danger fw-bold"><i class="bi bi-x-circle-fill me-1"></i>Incorrecta 3</label>
                                <input type="text" class="form-control border-danger" name="respuesta_incorrecta3"
                                       value="{{pregunta.respuesta_incorrecta3}}" required>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between mt-5">
                            <a href="/editor/index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-success fw-bold px-4">Crear Pregunta</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>