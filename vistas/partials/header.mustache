<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Juego del Saber</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="/public/css/validarVista.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="/public/css/partials.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
</head>
<body class="bg-light d-flex flex-column min-vh-100">
<!-- Header/Navbar -->
<header class="sticky-top" style="margin-bottom: 3rem;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow py-2 header-footer-min-height">
        <div class="container">
            <!-- Logo y Nombre -->
            <a class="navbar-brand d-flex align-items-center fw-bold" href="{{#usuario}}{{#es_admin}}/admin/panel{{/es_admin}}{{#es_editor}}/editor/index{{/es_editor}}{{^es_admin}}{{^es_editor}}/user/lobby{{/es_editor}}{{/es_admin}}{{/usuario}}{{^usuario}}/user/lobby{{/usuario}}" style="font-size: 1.6rem;">
                <i class="bi bi-joystick me-2"></i>
                Juego del Saber
            </a>

            <!-- Botón Hamburguesa -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú Principal -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {{#usuario}}
                        <!-- Menú para Administradores -->
                        {{#es_admin}}
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/admin/panel">
                                    <i class="bi bi-speedometer2 me-1"></i>
                                    Panel Admin
                                </a>
                            </li>
                        {{/es_admin}}

                        <!-- Menú para Editores -->
                        {{#es_editor}}
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/editor/index">
                                    <i class="bi bi-speedometer2 me-1"></i>
                                    Panel Editor
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/editor/verReportes">
                                    <i class="bi bi-flag me-1"></i>
                                    Reportes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/editor/verSugerencias">
                                    <i class="bi bi-lightbulb me-1"></i>
                                    Sugerencias
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/editor/crearPreguntaForm">
                                    <i class="bi bi-plus-circle me-1"></i>
                                    Crear Pregunta
                                </a>
                            </li>
                        {{/es_editor}}

                        <!-- Menú para Usuarios Normales -->
                        {{^es_admin}}{{^es_editor}}
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/user/lobby">
                                    <i class="bi bi-house me-1"></i>
                                    Inicio
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/game/ranking?ranking=partidas">
                                    <i class="bi bi-trophy me-1"></i>
                                    Ranking
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" href="/game/jugador?id={{id}}">
                                <i class="bi bi-person me-1"></i>
                                Mi Perfil Público
                                </a>
                            </li>
                        {{/es_editor}}{{/es_admin}}
                    {{/usuario}}
                </ul>

                <!-- Menú Usuario -->
                <div class="navbar-nav ms-auto">
                    {{#usuario}}
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center py-1" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="{{#foto_perfil}}{{foto_perfil}}{{/foto_perfil}}{{^foto_perfil}}/public/imagenes/default-avatar.jpg{{/foto_perfil}}"
                                     alt="Avatar"
                                     class="rounded-circle me-2"
                                     style="width: 28px; height: 28px; object-fit: cover;">
                                <span class="fw-medium">{{username}}</span>
                                {{#es_admin}}
                                    <span class="badge bg-danger text-white ms-2">Admin</span>
                                {{/es_admin}}
                                {{#es_editor}}
                                    <span class="badge bg-warning text-dark ms-2">Editor</span>
                                {{/es_editor}}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                {{^es_admin}}{{^es_editor}}
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/user/perfil">
                                        <i class="bi bi-person me-2"></i>
                                        Mi Perfil
                                    </a>
                                </li>
                                {{/es_editor}}{{/es_admin}}

                                <!-- Mostrar "Panel de Admin" solo para administradores -->
                                {{#es_admin}}
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/admin/panel">
                                            <i class="bi bi-speedometer2 me-2"></i>
                                            Panel de Admin
                                        </a>
                                    </li>
                                {{/es_admin}}

                                <!-- Mostrar "Panel de Editor" solo para editores -->
                                {{#es_editor}}
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/editor/index">
                                            <i class="bi bi-speedometer2 me-2"></i>
                                            Panel de Editor
                                        </a>
                                    </li>
                                {{/es_editor}}

                                <li><hr class="dropdown-divider my-1"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center text-danger" href="/user/lobby?action=salir">
                                        <i class="bi bi-box-arrow-right me-2"></i>
                                        Cerrar Sesión
                                    </a>
                                </li>
                            </ul>
                        </div>
                    {{/usuario}}
                    {{^usuario}}
                        <div class="d-flex gap-2 align-items-center justify-content-center">
                            <a class="btn btn-outline-light btn-sm px-2" href="/user/ingresar">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Ingresar
                            </a>
                            <a class="btn btn-light btn-sm text-primary fw-medium px-2" href="/user/registrar">
                                <i class="bi bi-person-plus me-1"></i>
                                Registrarse
                            </a>
                        </div>
                    {{/usuario}}
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Contenido Principal -->
<main class="flex-grow-1">