<div class="w3-container w3-center w3-margin">
    <form   method="POST"
            action="/user/ingresar">
        {{#error}}
            <div class='w3-panel w3-red'>{{error}}</div>
        {{/error}}
        <p><input class="w3-input w3-border" type="text" name="user" placeholder="Usuario" required></p>
        <p><input class="w3-input w3-border" type="password" name="password" placeholder="Password" required></p>
        <p><input class="w3-button w3-blue" type="submit" value="Ingresar"></p>
    </form>
</div>