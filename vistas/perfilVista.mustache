<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center p-5">

                <img src="{{#usuario.foto_perfil}}{{usuario.foto_perfil}}{{/usuario.foto_perfil}}{{^usuario.foto_perfil}}/public/imagenes/default-avatar.jpg{{/usuario.foto_perfil}}" alt="Foto de perfil" class="rounded-circle border border-3 border-primary mb-4" style="width: 120px; height: 120px; object-fit: cover;">
                <h3 class="fw-bold mb-1">{{usuario.nombre_completo}}</h3>
                <p class="text-muted">@{{usuario.username}}</p>

                <ul class="list-group list-group-flush text-start mb-4">
                    <li class="list-group-item"><strong>Email:</strong> {{usuario.email}}</li>
                    <li class="list-group-item"><strong>País:</strong> {{usuario.pais}}</li>
                    <li class="list-group-item"><strong>Ciudad:</strong> {{usuario.ciudad}}</li>
                    <li class="list-group-item"><strong>Año de nacimiento:</strong> {{usuario.anio_nacimiento}}</li>
                    <li class="list-group-item"><strong>Sexo:</strong> {{usuario.sexo}}</li>
                    <li class="list-group-item"><strong>Fecha de registro:</strong> {{usuario.fecha_registro}}</li>
                    <li class="list-group-item"><strong>Rol:</strong> {{usuario.rol}}</li>
                </ul>

                <div class="d-grid gap-2">
                    <a href="/user/lobby" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left-circle me-2"></i> Volver al Lobby
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>
